<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qixiaoyi.shejimoshi.MainActivity">

    <Button
        android:id="@+id/bt_user"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:text="查看家电"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_createC"/>

    <Button
        android:id="@+id/bt_updata"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:text="设备升级"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_change"/>

    <Button
        android:id="@+id/bt_createC"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:text="生产C家电"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_createB"
        android:layout_marginLeft="47dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/bt_createB"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:text="生产B家电"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_createA"
        android:layout_marginLeft="47dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/bt_createA"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:text="生产A家电"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="47dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="51dp"
        android:text="工厂机器"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/bt_change"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:text="建造工厂"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_createA"/>

    <TextView
        android:id="@+id/tv_out"
        android:layout_width="294dp"
        android:layout_height="139dp"
        android:text=""
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        />
</android.support.constraint.ConstraintLayout>
